<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hall_of_fame_background"
    tools:context=".HallOfFameActivity">

    <ListView
        android:id="@+id/HOFlistView"
        android:layout_width="250dp"
        android:layout_height="400dp"


        android:layout_centerInParent="true"
        android:background="@color/redCarpetColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_above="@+id/HOFlistView"
android:layout_centerHorizontal="true"


        android:background="@drawable/round_yellow_halloffame"
        android:text="@string/hall_of_fame"
        android:textAlignment="center"

        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/HOFlistView" />
</RelativeLayout>